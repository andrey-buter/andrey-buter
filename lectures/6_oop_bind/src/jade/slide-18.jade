			code.language-javascript.
				'use strict' 
				
				function sayMyName(x, y) {
					console.log( this );
				}
				
				var petya = {
					name: 'Petya',
					sayMyName: sayMyName
				}
				
				function createWrapper() {
					var tempPetya = petya;
					// Таже мы можем создать переменную fn,
					// которая сразу сохранит ссылку на функцию
					var fn = tempPetya.sayMyName;
					
					return function() { 
						fn.call( tempPetya );
					}
				}
				
				var f = createWrapper();
				
				setTimeout( f, 2000 );
				
				petya = null;
				
